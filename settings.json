{
    "workbench.colorCustomizations": {
        // 1ยบ column - Files, Search, Git, ..., icons
        "activityBar.background": "#0e0e0e", // column background
        "activityBar.border": "#ffffff59", // column border
        "activityBar.foreground": "#ffe600", // active icon - color
        "activityBar.activeBorder": "#ffe600", // active icon - border color 
        "activityBar.activeBackground": "#b1b1b160", // active icon - background
        "activityBar.inactiveForeground": "#b66f04", // inactive icon color
        // 2ยบ column - Files, search, ...
        "sideBar.background": "#0e0e0e", // column background
        "sideBar.border": "#ffffff59", // column border
        // 3ยบ column - Editor
        "editor.background": "#0e0e0e", // column background
        // Debug, Output and Terminal - below editor
        "panel.background": "#0e0e0e",
        "panelTitle.activeBorder": "#fbff00",
        "panelTitle.activeForeground": "#ffff",
    },
    // change editor font
    "editor.fontFamily": "Fira Code", //options => ["Consolas, 'Courier New', monospace"], ["Fira Code"], ["Verdana"]
    "editor.fontLigatures": true,
    // disable editor minimap
    "editor.minimap.enabled": false,
    // change cursor blinking
    "editor.cursorBlinking": "smooth",
    // change editor font size
    "editor.fontSize": 13.25,
    // disable scroll beyond function
    "editor.scrollBeyondLastLine": false,

    // itens space in files tab (2ยบ Column)
    "workbench.tree.indent": 15,

    // custom terminal
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.rendererType": "experimentalWebgl",

    // actual theme
    "workbench.colorTheme": "Monokai Dimmed",
}
